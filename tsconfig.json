{
    "compilerOptions": {
        "outDir": "./build/ts/",
        "rootDir": "./src/ts/",
        "baseUrl": ".",
        "sourceMap": true,
        "pretty": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "module": "es2015",
        "moduleResolution": "node",
        "lib": ["es2015", "dom"],
        "strict": true,
        "target": "es2015",
        "listEmittedFiles": true,
        "listFiles": true
    },
    "include": [
        "./src/ts/**/*.ts"
    ],
    "compileOnSave": false
}
