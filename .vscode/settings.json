{
    "liveServer.settings.root": "/build/dist",
    "files.exclude": {
        "**/.git": true,
        "**/.gradle": true,
        "**/.idea": true,
        "**/_site": true,
        "**/_support": true,
        "**/node_modules": true,
        "**/build": true
    },
    "editor.autoClosingBrackets": false,
    "editor.codeLens": false,
    "editor.dragAndDrop": false,
    "editor.formatOnSave": true,
    "[html]": {
        "editor.formatOnSave": false
    },
    "editor.rulers": [120],
    "editor.wordWrapColumn": 120,
    "json.format.enable": false,
    "mocha.files.glob": "test/ts/**/*.test.ts",
    "mocha.options": { "useColors": false },
    "mocha.logVerbose": true,
    "mocha.requires": ["ts-node/register", "jsdom-global/register"],
    "tslint.alwaysShowStatus": true,
    "tslint.enable": true,
    "typescript.tsdk": "./node_modules/typescript/lib",
    "typescriptHero.imports.multiLineWrapThreshold": 120,
    "typescriptHero.imports.organizeOnSave": true,
    "typescriptHero.imports.multiLineTrailingComma": false
}
