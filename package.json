{
  "name": "civbuddy",
  "version": "2.0.0",
  "description": "A calculator app for players of Francis Tresham's original Civilization board game (1980), helpful when buying civilization cards.",
  "keywords": [
    "board-game",
    "civilization",
    "francis-tresham"
  ],
  "homepage": "http://civbuddy.org/",
  "bugs": {
    "url": "https://github.com/tsjensen/civbuddy2/issues"
  },
  "license": "GPL-3.0",
  "author": {
    "name": "Thomas Jensen"
  },
  "repository": "github:tsjensen/civbuddy2",
  "scripts": {
    "prebuild": "copyup resources/rules/*.json build/ts/ & tsc",
    "build": "webpack",
    "postbuild": "npm-run-all --parallel --silent html-template:*",
    "test": "echo \"Error: no test specified\" && exit 1",
    "html-template:index": "htmlprocessor resources/index.html -o build/dist/index.html",
    "posthtml-template:index": "replace @@pageName@@ games build/dist/index.html -q",
    "html-template:players": "htmlprocessor resources/players.html -o build/dist/players.html",
    "posthtml-template:players": "replace @@pageName@@ players build/dist/players.html -q",
    "html-template:cards": "htmlprocessor resources/cards.html -o build/dist/cards.html",
    "posthtml-template:cards": "replace @@pageName@@ cards build/dist/cards.html -q",
    "html-template:funds": "htmlprocessor resources/funds.html -o build/dist/funds.html",
    "posthtml-template:funds": "replace @@pageName@@ funds build/dist/funds.html -q"
  },
  "dependencies": {
    "babel-polyfill": "6.26.0",
    "bootstrap": "4.0.0",
    "bootswatch": "4.0.0",
    "jquery": "3.2.1",
    "l20n": "5.0.0",
    "mustache": "2.3.0",
    "open-iconic": "1.1.1",
    "popper.js": "1.12.9",
    "sprintf-js": "1.1.1",
    "uuid": "3.1.0"
  },
  "devDependencies": {
    "@types/bootstrap": "3.3.37",
    "@types/jquery": "3.2.17",
    "@types/mustache": "0.8.30",
    "@types/node": "8.5.1",
    "@types/sprintf-js": "1.1.0",
    "@types/uuid": "3.4.3",
    "copy-webpack-plugin": "4.3.1",
    "copyfiles": "1.2.0",
    "ejs": "2.5.7",
    "execa": "0.9.0",
    "htmlprocessor": "0.2.6",
    "npm-run-all": "4.1.2",
    "replace": "0.3.0",
    "typescript": "2.7.1",
    "webpack": "3.10.0",
    "webpack-version-file-plugin": "0.2.3"
  }
}
