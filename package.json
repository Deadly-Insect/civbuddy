{
    "name": "civbuddy",
    "version": "2.3.3",
    "description": "A calculator app for players of Francis Tresham's original Civilization board game (1980)",
    "keywords": [
        "board-game",
        "civilization",
        "francis-tresham"
    ],
    "homepage": "https://civbuddy.org/",
    "bugs": {
        "url": "https://github.com/tsjensen/civbuddy/issues"
    },
    "license": "GPL-3.0",
    "author": {
        "name": "Thomas Jensen"
    },
    "repository": "github:tsjensen/civbuddy",
    "scripts": {
        "prebuild": "copyfiles -f resources/version.json build/",
        "build": "npm-run-all --parallel --silent html-template:* sass tslint",
        "html-template:index": "htmlprocessor resources/index.html -o build/dist/index.html",
        "posthtml-template:index": "replace @@pageName@@ games build/dist/index.html -q",
        "html-template:players": "htmlprocessor resources/players.html -o build/dist/players.html",
        "posthtml-template:players": "replace @@pageName@@ players build/dist/players.html -q",
        "html-template:cards": "htmlprocessor resources/cards.html -o build/dist/cards.html",
        "posthtml-template:cards": "replace @@pageName@@ cards build/dist/cards.html -q",
        "html-template:funds": "htmlprocessor resources/funds.html -o build/dist/funds.html",
        "posthtml-template:funds": "replace @@pageName@@ funds build/dist/funds.html -q",
        "html-template:error": "htmlprocessor resources/error.html -o build/dist/error.html",
        "posthtml-template:error": "replace @@pageName@@ error build/dist/error.html -q",
        "sass": "node-sass --source-map=true src/sass -o build/dist/css/",
        "postbuild": "cross-env TS_NODE_PROJECT=tsconfig-for-webpack-config.json webpack",
        "prehash": "hashmark -l 12 -r --cwd build/dist/css {civbuddy,cards,games,error,funds,players}.css {name}.{hash}{ext} | replaceinfiles --silent --source build/dist/*.html",
        "hash": "hashmark -l 12 -r --cwd build/dist/js {bootstrap.min,civbuddy,l20n.min}.js {name}.{hash}{ext} | replaceinfiles --silent --source build/dist/*.html",
        "posthash": "rimraf build/dist/{css,js}/*.map",
        "test": "cross-env TS_NODE_COMPILER_OPTIONS={\\\"module\\\":\\\"commonjs\\\"} mocha --require ts-node/register --require jsdom-global/register test/ts/**/*.test.ts",
        "tslint": "tslint --project tsconfig.json --format verbose src/ts/**/*.ts",
        "posttslint": "tslint --project tsconfig-test.json --format verbose test/ts/**/*.ts"
    },
    "dependencies": {
        "babel-polyfill": "6.26.0",
        "bootstrap": "4.1.2",
        "bootswatch": "4.1.2",
        "jquery": "3.3.1",
        "l20n": "5.0.0",
        "mustache": "2.3.0",
        "open-iconic": "1.1.1",
        "popper.js": "1.14.3",
        "sprintf-js": "1.1.1",
        "uuid": "3.2.1"
    },
    "devDependencies": {
        "@types/bootstrap": "4.1.2",
        "@types/chai": "4.1.3",
        "@types/copy-webpack-plugin": "4.4.1",
        "@types/execa": "0.9.0",
        "@types/jquery": "3.3.1",
        "@types/mocha": "5.2.0",
        "@types/mustache": "0.8.30",
        "@types/node": "8.9.4",
        "@types/sprintf-js": "1.1.0",
        "@types/uuid": "3.4.3",
        "@types/webpack": "3.8.8",
        "chai": "4.1.2",
        "copy-webpack-plugin": "4.4.1",
        "copyfiles": "1.2.0",
        "cross-env": "5.1.3",
        "ejs": "2.5.7",
        "execa": "0.9.0",
        "hashmark": "5.0.0",
        "htmlprocessor": "0.2.6",
        "jsdom": "11.10.0",
        "jsdom-global": "3.0.2",
        "mocha": "5.2.0",
        "node-sass": "4.9.0",
        "npm-run-all": "4.1.3",
        "replace": "0.3.0",
        "replaceinfiles": "1.1.4",
        "rimraf": "2.6.2",
        "ssri": "5.2.2",
        "ts-loader": "3.5.0",
        "ts-node": "5.0.1",
        "tsconfig-paths": "3.1.1",
        "tslint": "5.9.1",
        "typescript": "2.8.1",
        "webpack": "3.11.0",
        "webpack-version-file-plugin": "0.3.1"
    }
}
